<!DOCTYPE html>
<html lang="en">
<%- include("layouts/header");-%>

    <body>
        <%- include("layouts/navbar");-%>
            <!-- Page Header-->
            <header class="masthead" style="background-image: url('/assets/img/contact-bg.jpg')">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="page-heading">
                                <h1>Create New Post</h1>
                                <!-- <span class="subheading">Have questions? I have answers.</span> -->
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main Content-->
            <main class="mb-2">
                <div class="container px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <% if (errors!=null && errors.length>0) { %>
                            <ul class="list-group">
                                <% for( let index=0; index < errors.length; index++ ) { %>
                                    <li class="list-group-item list-group-item-danger">
                                        <%= errors[index] %>
                                    </li>
                                    <% } %>
                            </ul>
                            <% } %>
                            <div class="my-5">

                                <form id="contactForm" action="/posts/store" method="post"
                                    enctype="multipart/form-data">
                                    <div class="form-floating">
                                        <input class="form-control" name="tittle" id="tittle" type="text"
                                            placeholder="Enter your tittle..." />
                                        <label for="tittle">Tittle</label>

                                    </div>

                                    <div class="form-floating">
                                        <textarea class="form-control" id="description" name="body"
                                            placeholder="Enter your description here..."
                                            ></textarea>
                                        <!-- <label for="description">Description</label> -->
                                        <script>
                                            $('#description').summernote({
                                                placeholder: 'Description',
                                                tabsize: 2,
                                                height:200
                                            });
                                        </script>
                                    </div>
                                    <div class="control-group mt-2">
                                        <!-- <div class="form-control floating-label-form-group controls"> -->
                                            <!-- <label>Image</label> -->
                                            <input type="file" class="form-control" id="image" name="image">
                                        <!-- </div> -->
                                    </div>
                                    <br />
                                    <!-- Submit success message-->
                                    <!---->
                                    <!-- This is what your users will see when the form-->
                                    <!-- has successfully submitted-->
                                    <div class="d-none" id="submitSuccessMessage">

                                    </div>

                                    <div class="d-none" id="submitErrorMessage">
                                        <div class="text-center text-danger mb-3">Error sending message!</div>
                                    </div>
                                    <!-- Submit Button-->
                                    <button class="btn btn-primary text-uppercase " id="submitButton"
                                        type="submit">Send</button>
                                </form>
                            </div>
                        </div>
                  
                </div>
            </main>
            <%- include("layouts/footer");-%>
                <%- include("layouts/scripts");-%>
                    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
                    <!-- * *                               SB Forms JS                               * *-->
                    <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
                    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
                    <!-- <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script> -->
    </body>

</html>